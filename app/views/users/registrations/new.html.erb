<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Registrarse</h3>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12">
              <%= f.error_notification %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <%= f.input :email, required: true, autofocus: true %>
            </div>
            <div class="col-md-6">
              <%= f.input :nombre %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <%= f.input :tipo_identificacion, as: :select, collection: resource.tipo_identificacion_collection,
                          prompt: false %>
            </div>
            <div class="col-md-6">
              <%= f.input :nro_identificacion %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <%= f.input :fecha_nacimiento, as: :date_picker %>
            </div>
            <div class="col-md-6">
              <%= f.input :lugar_nacimiento %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-2">
              <%= f.input :genero, as: :radio_buttons, collection: [['Masculino', true], ['Femenino', false]],
                          wrapper: :vertical_radio_and_checkboxes %>
            </div>
            <div class="col-md-4">
              <%= f.input :telefono %>
            </div>
            <div class="col-md-6">
              <%= f.input :lugar_residencia %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <%= f.input :password, required: true,
                          hint: ("MÃ­nimo #{@minimum_password_length} caracteres" if @minimum_password_length) %>
              <%= f.input :terminos, as: :boolean, label: 'Acepto terminos y condiciones', checked_value: true, unchecked_value: false %>
            </div>
            <div class="col-md-6">
              <%= f.input :password_confirmation, required: true %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <%= f.button :submit, "Registrar" %>
              <hr>
              <%= render "users/shared/links" %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>